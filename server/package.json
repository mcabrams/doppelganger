{
  "name": "server",
  "scripts": {
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch",
    "serve": "dotenv -- nodemon -L -e ts,graphql -x ts-node -r tsconfig-paths/register src/index.ts",
    "start": "concurrently \"npm run generate:watch\" \"npm run serve\"",
    "debug": "dotenv -- nodemon -L -e ts,graphql -x ts-node --inspect -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "apollo-server-express": "^2.6.1",
    "bcryptjs": "2.4.3",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "http": "^0.0.0",
    "jsonwebtoken": "8.5.1",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.5.0",
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript": "1.5.0",
    "@graphql-codegen/typescript-resolvers": "1.5.0",
    "@types/bcryptjs": "2.4.2",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.2.0",
    "@types/graphql-depth-limit": "^1.1.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.0.4",
    "concurrently": "^4.1.1",
    "dotenv-cli": "1.4.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-import-node": "^0.0.4",
    "nodemon": "1.19.1",
    "prisma": "1.34.0",
    "rimraf": "2.6.3",
    "ts-node": "8.2.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "3.4.5"
  }
}
